@page "/"
@inherits EmployeeListBase 

<h3>Employee List</h3>

<div class="card-deck">

    @if (Employees == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        @foreach (var emp in Employees)
        {
            <div class="card-deck m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@emp.FirstName @emp.LastName </h3>
                    <img class="card-img-top imageThumbnail" src="@emp.ImagePath" />
                    <div class="card-footer text-center">
                        <a href="@($"employeedetails/{emp.ID}")" class="btn btn-primary m-1">View</a>
                        <a href="#" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            </div>
        }
    }

</div>